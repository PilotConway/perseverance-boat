<%= javascript_include_tag "calendar" %>

<%= coffee_script_tag do %>
  # Initialize the Calendar with the event source url 
  root = exports ? this
  $(document).ready ->
    calendar = new root.Calendar '<%= url_for :controller => :bookings, :action => :index, :format => :json %>', '<%= url_for :controller => :bookings %>'
<% end %>

<h1>Bookings</h1>

<div id='calendar'></div>

